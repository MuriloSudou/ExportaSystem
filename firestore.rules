rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    
    // REGRA ANTIGA (EXPIRADA)
    // allow read, write: if request.time < timestamp.date(2025, 10, 8);

    // ðŸš€ NOVA REGRA 
    // Permite que qualquer usuÃ¡rio autenticado leia e escreva
    // seus prÃ³prios dados. Isso Ã© muito mais seguro.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }
    
    // Regra para os bookings (permite que um usuÃ¡rio logado
    // crie, leia, atualize e delete seus prÃ³prios bookings)
    match /users/{userId}/bookings/{bookingId} {
    	allow read, write: if request.auth.uid == userId;
    }

    // CUIDADO: Esta regra abaixo Ã© para desenvolvimento.
    // Ela libera o resto do seu banco. Remova se nÃ£o precisar.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}